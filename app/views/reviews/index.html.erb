
<h1>Listing Reviews</h1>
 
<table>
  <tr>
    <th>Place</th>
    <th>Review</th>
  </tr>
 
  <% @review.each do |review| %>
    <tr>
      <td><%= review.place %></td>
      <td><%= review.info %></td>
      <td><%= link_to "Show", review_path(review) %></td>
	<td><%= link_to "Edit", edit_review_path(review) %></td>
	<td><%= link_to "Destroy", review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br>

<%= link_to("New Review", new_review_path) %>
<%= link_to("Home Page", root_path) %> 